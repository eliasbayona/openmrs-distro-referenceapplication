{
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo.png",
      "alt": "Your Clinic"
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo.png",
      "name": "Your Clinic"
    },
    "extensionSlots": {
      "homepage-dashboard-slot": {
        "remove": [
          "service-queues-dashboard-link"
        ],
        "configure": {
          "patient-lists-dashboard-link": {
            "title": "patientLists"
          }
        }
      }
    },
    "Translation overrides": {
      "en": { "patientLists": "Patient-Lists" },
      "fr": { "patientLists": "Listes de patients" }
    }
  },
  "@openmrs/esm-patient-registration-app": {
    "fieldDefinitions": [
      { "id": "mobile", "name": "Mobile", "type": "person attribute", "uuid": "08df4d02-e9c5-40e8-9d3f-235804c7468a",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },
      { "id": "landline", "name": "Landline", "type": "person attribute", "uuid": "80676eeb-d1e9-474e-8e90-9500f64f1476" },
      { "id": "postalAddress", "name": "Postal Address (city/town/village)", "type": "person attribute", "uuid": "8d412478-de4a-4434-885d-203907904e7a" },

      { "id": "nokName", "name": "Next Of Kin Full Name", "type": "person attribute", "uuid": "ccfa49e3-f6a6-4511-8937-50a5e27b9442" },
      { "id": "nokPhone", "name": "Next Of Kin Phone Number", "type": "person attribute", "uuid": "f89fa237-1401-4f0b-9496-1034a2322cea",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "primaryDoctorName", "name": "Primary Doctor Full Name", "type": "person attribute", "uuid": "d0460564-db02-439e-8a52-40de1c08c3df" },
      { "id": "primaryDoctorPhone", "name": "Primary Doctor Phone Number", "type": "person attribute", "uuid": "9b29730c-f418-4910-a501-324728271a0a",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "guarantor", "name": "Guarantor", "type": "person attribute", "uuid": "bd962b0d-484b-4be2-9a2c-c37e86f7f94c" },
      { "id": "policyholderName", "name": "Policyholder name", "type": "person attribute", "uuid": "21859e9a-aaee-4b8e-847e-c3d50f1668c0" },
      { "id": "policyholderRelationship", "name": "Policyholder relationship", "type": "person attribute",
        "uuid": "ca81daba-825f-4654-9a98-a2a1020a61b8", "answerConceptSetUuid": "0d71b15a-3d32-409c-a467-3557fc91d11e" },
      { "id": "policyStartDate", "name": "Policy start date", "type": "person attribute", "uuid": "2df04e47-2146-4c21-8b3e-a31f64c8c7d5","validation": {
        "matches": "^(0[1-9]|[12][0-9]|3[01])\\/(0[1-9]|1[0-2])\\/(19|20)\\d\\d$"
      } },

      { "id": "birthTime", "name": "Birth Time (HH:mm)", "type": "person attribute", "uuid": "c9ff6fb8-013d-4f7d-80de-6b1a8b44dc4a",
        "validation": { "matches": "^([01]?\\d|2[0-3]):[0-5]\\d$" } },

      { "id": "membershipId", "name": "Membership ID", "type": "person attribute", "uuid": "a65deefa-451a-4ad6-8871-c96492d3afe1" }
    ],

    "sectionDefinitions": [
      {
        "id": "insuranceInfo",
        "name": "Insurance Information",
        "fields": ["guarantor", "policyholderName", "policyholderRelationship", "policyStartDate", "membershipId"]
      },
      {
        "id": "additionalPatientInfo",
        "name": "Additional Patient Information",
        "fields": ["mobile", "landline", "postalAddress", "nokPhone", "nokName", "primaryDoctorPhone", "primaryDoctorName"]
      }
    ],

    "sections": [
      "demographics",
      "contact",
      "insuranceInfo",
      "additionalPatientInfo"
    ],
    "fieldConfigurations": {
      "address": {
        "useAddressHierarchy": {
          "useQuickSearch": false
        }
      },
      "gender": [
        { "id": "male", "value": "Male", "label": "Male" },
        { "id": "female", "value": "Female", "label": "Female" },
        { "id": "other", "value": "Other", "label": "Other" }
      ]
    },
    "Translation overrides": {
      "en": {
        "Location.streetAddress": "Street Address",
        "Location.plotNumber": "Plot Number",
        "Location.address3": "Ward (Kgotla)",
        "Location.cityVillage": "City/Town/Village",
        "Location.countyDistrict": "District",
        "Location.country": "Country",
        "Location.postalCode": "Postal Code"
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#831717",
    "Brand color #2": "#831717",
    "Brand color #3": "#1978bd"
   
  }
}

