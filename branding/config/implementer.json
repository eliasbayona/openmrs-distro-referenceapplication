{
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo-fh.png",
      "alt": "Your Clinic"
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo-fh.png",
      "name": "Your Clinic"
    },
    "extensionSlots": {
      "homepage-dashboard-slot": {
        "remove": [
          "service-queues-dashboard-link"
        ],
        "configure": {
          "patient-lists-dashboard-link": {
            "title": "patientLists"
          }
        }
      }
    },
    "Translation overrides": {
      "en": { "patientLists": "Patient-Lists" },
      "fr": { "patientLists": "Listes de patients" }
    }
  },
  "@openmrs/esm-patient-registration-app": {
    "fieldDefinitions": [
      { "id": "mobile", "name": "Cell Number", "type": "person attribute", "uuid": "1178a504-e7c4-45b4-a5d1-3f12375ab3c9",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },
      { "id": "landline", "name": "Landline", "type": "person attribute", "uuid": "d3a70b47-1bd7-42b0-8392-ca403081ee8d" },

      { "id": "nokName", "name": "Next Of Kin Full Name", "type": "person attribute", "uuid": "08d2ce09-192f-4b22-b67b-b4b4805730cf" },
      { "id": "nokPhone", "name": "Next Of Kin Phone Number", "type": "person attribute", "uuid": "b99f5f17-8380-4cd6-955b-5a66feaea5ff",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "medicalAidNumber", "name": "Medical Aid Number", "type": "person attribute", "uuid": "da9ab6e0-dd4d-4ca7-a4d0-de9f01f57b28" },
      { "id": "principalMemberName", "name": "Name of Principal Member", "type": "person attribute", "uuid": "87f1cece-91a5-4b2e-96ba-cd599d476b5a" },
      { "id": "relationshipToPrincipal", "name": "Relationship to Principal", "type": "person attribute",
        "uuid": "7863bf6f-2534-41aa-ba7e-8e22ecd4f28c",
        "answerConceptSetUuid": "5fd23084-8dfd-43eb-8d9a-349ca84ceec5" },

      { "id": "occupation", "name": "Occupation", "type": "person attribute", "uuid": "221ab9ef-3ec4-4de1-a75e-f0c3b1182e5c" },
      { "id": "employer", "name": "Employer", "type": "person attribute", "uuid": "32bf0f66-3b3f-46d2-bea7-53318f637cb7" },
      { "id": "email", "name": "Email address", "type": "person attribute", "uuid": "8926bdac-7e22-11f0-90f9-3aae1a0e24f5" },

      { "id": "medicalAidProvider", "name": "Guarantor", "type": "person attribute", "uuid": "4c949357-e191-4fbb-bcec-962763cace8b",
      "answerConceptSetUuid": "8e0ccc0d-2ab7-45c0-adb3-85c9cf37418e"  },

      { "id": "policyStartDate", "name": "Policy start date", "type": "person attribute", "uuid": "840dc73b-551c-4eef-938d-162371f188e9" },

      { "id": "membershipType", "name": "Membership Type (Principal/Dependent)", "type": "person attribute",
        "uuid": "d0ff6293-471e-4b71-9b1e-fff316bcf444",
        "answerConceptSetUuid": "5923418f-744f-492f-bd07-aea0e70ac352" },

      { "id": "knownAllergies", "required": true, "name": "Known Allergies", "type": "person attribute", "uuid": "59ac0b1d-a122-4fdc-b33f-1bfb1fc8d988" },
      { "id": "previousSurgeries", "widget": "textarea", "name": "Previous surgeries and year", "type": "person attribute", "uuid": "eaaf9ce1-dada-4c0b-a4a9-34875edae1d5" },

      { "id": "chronicIllnesses", "name": "Chronic illnesses", "type": "person attribute",
        "uuid": "dddf26fb-79a7-46c7-b947-5fb1c757099e",
        "answerConceptSetUuid": "656d9747-5786-4509-9279-f31959785036" },

      { "id": "chronicOtherDetails", "widget": "textarea", "name": "Details of other", "type": "person attribute", "uuid": "bbfbee3f-8dd4-497f-879a-559042c1e6d6" },

      { "id": "nokLandline", "name": "Next Of Kin Landline", "type": "person attribute", "uuid": "b1c17578-e573-431b-aa6a-e091ec79522a" }
    ],

    "identifiers": [
      {
        "uuid": "a71403f3-8584-4289-ab41-2b4e5570bd45",
        "label": "National ID (Omang Number)",
        "required": false,
        "manualEntryEnabled": true,
        "validation": {
          "regex": "^\\d{4}[12]\\d{4}$",
          "message": "Omang must be 9 digits."
        }
      },
      {
        "uuid": "19c445ce-1347-471d-86b7-36d6fddc9378",
        "label": "Passport Number",
        "required": false,
        "manualEntryEnabled": true,
        "validation": {
          "regex": "^[A-Z]{2}\\d{7}$",
          "message": "Passport must be 2 letters followed by 7 digits."
        }
      }
    ],

    "validators": [
      {
        "type": "custom",
        "name": "require-one-of-omang-or-passport",
        "run": "function (model) { const ids = (model && model.identifiers) || {}; const omang = ids['a71403f3-8584-4289-ab41-2b4e5570bd45'] || ''; const passport = ids['19c445ce-1347-471d-86b7-36d6fddc9378'] || ''; if (!omang && !passport) { return { field: 'identifiers', message: 'Provide either National ID (Omang) or Passport number.' }; } return null; }"
      }
    ],

    "sectionDefinitions": [
      {
        "id": "additionalPatientInfo",
        "name": "Additional Patient Information",
        "fields": ["idPassport", "occupation", "employer", "email", "mobile", "landline"]
      },
      {
        "id": "medicalAidInfo",
        "name": "Insurance Information",
        "fields": ["medicalAidProvider", "medicalAidNumber", "policyStartDate", "membershipType", "principalMemberName", "relationshipToPrincipal"]
      },
      {
        "id": "nextOfKin",
        "name": "Next of Kin",
        "fields": ["nokName", "nokPhone", "nokLandline"]
      }
    ],

    "sections": [
      "demographics",
      "contact",
      "additionalPatientInfo",
      "medicalAidInfo",
      "medicalHistory",
      "nextOfKin"
    ],

    "fieldConfigurations": {
      "address": {
        "useAddressHierarchy": {
          "useQuickSearch": false
        }
      },
      "gender": [
        { "id": "male", "value": "Male", "label": "Male" },
        { "id": "female", "value": "Female", "label": "Female" },
        { "id": "other", "value": "Other", "label": "Other" }
      ]
    },

    "Translation overrides": {
      "en": {
        "Location.streetAddress": "Street Address",
        "Location.plotNumber": "Plot Number",
        "Location.address3": "Ward (Kgotla)",
        "Location.cityVillage": "City/Town/Village",
        "Location.countyDistrict": "District",
        "Location.country": "Country",
        "Location.postalCode": "Postal Code"
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#2a79bd",
    "Brand color #2": "#2a79bd",
    "Brand color #3": "#ff7f0e"
  }
}

