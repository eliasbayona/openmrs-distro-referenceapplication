{
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo.png",
      "alt": "Your Clinic"
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo.png",
      "name": "Your Clinic"
    },
    "extensionSlots": {
      "homepage-dashboard-slot": {
        "remove": [
          "service-queues-dashboard-link"
        ],
        "configure": {
          "patient-lists-dashboard-link": {
            "title": "patientLists"
          }
        }
      }
    },
    "Translation overrides": {
      "en": { "patientLists": "Patient-Lists" },
      "fr": { "patientLists": "Listes de patients" }
    }
  },
  "@openmrs/esm-patient-registration-app": {
    "fieldDefinitions": [
      { "id": "mobile", "name": "Mobile", "type": "person attribute", "uuid": "ad059cd7-08d5-4825-9473-e69c4adda456",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },
      { "id": "landline", "name": "Landline", "type": "person attribute", "uuid": "24daef21-0510-4cf3-a03b-6b50d7ce7027" },
      { "id": "postalAddress", "name": "Postal Address (city/town/village)", "type": "person attribute", "uuid": "fc7c5799-3fa7-499b-9ab7-6d323fce7aad" },

      { "id": "nokName", "name": "Next Of Kin Full Name", "type": "person attribute", "uuid": "951b7590-ecc4-4a61-8321-37f8550c9d25" },
      { "id": "nokPhone", "name": "Next Of Kin Phone Number", "type": "person attribute", "uuid": "032238c7-e713-4de7-853c-6638ed3b97f6",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "primaryDoctorName", "name": "Primary Doctor Full Name", "type": "person attribute", "uuid": "a53cf88b-05e9-46e4-bb9d-25319e430309" },
      { "id": "primaryDoctorPhone", "name": "Primary Doctor Phone Number", "type": "person attribute", "uuid": "9b261083-6306-4a56-8cd6-f2cb701d88de",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "guarantor", "name": "Guarantor", "type": "person attribute", "uuid": "975da596-b892-4fe1-968c-78d6ea1c2b61" },
      { "id": "policyholderName", "name": "Policyholder name", "type": "person attribute", "uuid": "96e86349-22fd-4dfc-8d30-9cd68ac217ee" },
      { "id": "policyholderRelationship", "name": "Policyholder relationship", "type": "person attribute",
        "uuid": "a0fdec53-c74d-4c40-b0d5-45070bff4421", "answerConceptSetUuid": "6ae8c9b0-b7d4-44fa-8445-9a3de8f478f1" },
      { "id": "policyStartDate", "name": "Policy start date", "type": "person attribute", "uuid": "a60942df-9d59-4a2b-bdbf-43bb1ba14e7a","validation": {
        "matches": "^(0[1-9]|[12][0-9]|3[01])\\/(0[1-9]|1[0-2])\\/(19|20)\\d\\d$"
      } },

      { "id": "birthTime", "name": "Birth Time (HH:mm)", "type": "person attribute", "uuid": "5d15144e-f96b-4419-a406-1e7b7b848cd3",
        "validation": { "matches": "^([01]?\\d|2[0-3]):[0-5]\\d$" } },

      { "id": "membershipId", "name": "Membership ID", "type": "person attribute", "uuid": "53dbb4d6-d58c-4375-8af0-8f6151d6c213" }
    ],

    "sectionDefinitions": [
      {
        "id": "insuranceInfo",
        "name": "Insurance Information",
        "fields": ["guarantor", "policyholderName", "policyholderRelationship", "policyStartDate", "membershipId"]
      },
      {
        "id": "additionalPatientInfo",
        "name": "Additional Patient Information",
        "fields": ["mobile", "landline", "postalAddress", "nokPhone", "nokName", "primaryDoctorPhone", "primaryDoctorName"]
      }
    ],

    "sections": [
      "demographics",
      "contact",
      "insuranceInfo",
      "additionalPatientInfo"
    ],
    "fieldConfigurations": {
      "address": {
        "useAddressHierarchy": {
          "useQuickSearch": false
        }
      },
      "gender": [
        { "id": "male", "value": "Male", "label": "Male" },
        { "id": "female", "value": "Female", "label": "Female" },
        { "id": "other", "value": "Other", "label": "Other" }
      ]
    },
    "Translation overrides": {
      "en": {
        "Location.streetAddress": "Street Address",
        "Location.plotNumber": "Plot Number",
        "Location.address3": "Ward (Kgotla)",
        "Location.cityVillage": "City/Town/Village",
        "Location.countyDistrict": "District",
        "Location.country": "Country",
        "Location.postalCode": "Postal Code"
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#831717",
    "Brand color #2": "#831717",
    "Brand color #3": "#1978bd"
   
  }
}

