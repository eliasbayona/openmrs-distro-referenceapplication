{
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo-fh.png",
      "alt": "Your Clinic"
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo-fh.png",
      "name": "Your Clinic"
    },
    "extensionSlots": {
      "homepage-dashboard-slot": {
        "remove": [
          "service-queues-dashboard-link"
        ],
        "configure": {
          "patient-lists-dashboard-link": {
            "title": "patientLists"
          }
        }
      }
    },
    "Translation overrides": {
      "en": { "patientLists": "Patient-Lists" },
      "fr": { "patientLists": "Listes de patients" }
    }
  },
  "@openmrs/esm-patient-registration-app": {
    "fieldDefinitions": [
      { "id": "mobile", "name": "Cell Number", "type": "person attribute", "uuid": "424f37d1-7f1e-4914-8af6-0ab92f1b47c8",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },
      { "id": "landline", "name": "Landline", "type": "person attribute", "uuid": "63ba56bb-de22-460b-ab59-312d8f9a6324" },

      { "id": "nokName", "name": "Next Of Kin Full Name", "type": "person attribute", "uuid": "2ea80cba-2273-4053-b68c-67934f7964c6" },
      { "id": "nokPhone", "name": "Next Of Kin Phone Number", "type": "person attribute", "uuid": "2efc5b30-49c3-46a5-9705-dca5052d1b57",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "medicalAidNumber", "name": "Medical Aid Number", "type": "person attribute", "uuid": "9e9e1770-5396-4730-95f6-901dd4bdbf75" },
      { "id": "principalMemberName", "name": "Name of Principal Member", "type": "person attribute", "uuid": "d998d390-5bc7-4bcb-8010-bfab2056cbb7" },
      { "id": "relationshipToPrincipal", "name": "Relationship to Principal", "type": "person attribute",
        "uuid": "2e088823-b310-4977-960b-90ac5b2fd606",
        "answerConceptSetUuid": "6774ccfa-d366-4aaf-be17-64470d84b8eb" },

      { "id": "idPassport", "name": "ID/Passport number", "type": "person attribute", "uuid": "1a81da00-64e3-421e-af56-08f78b1389e1" },
      { "id": "occupation", "name": "Occupation", "type": "person attribute", "uuid": "6a523a2d-ac2e-4561-9243-b93d88ef5ef4" },
      { "id": "employer", "name": "Employer", "type": "person attribute", "uuid": "bd026538-746d-400d-bca2-cc1e88a2d179" },
      { "id": "email", "name": "Email address", "type": "person attribute", "uuid": "67c9a764-78f8-11f0-a657-7e5e3266f55a" },

      { "id": "medicalAidProvider", "name": "Medical aid (Provider)", "type": "person attribute", "uuid": "5e1eae00-6ae7-459a-bd10-a2f8dad2daba",
      "answerConceptSetUuid": "39619df0-9b0a-4a54-b4ff-453c85ac7b2f"  },

      { "id": "membershipType", "name": "Membership Type (Principal/Dependent)", "type": "person attribute",
        "uuid": "56937ccb-03eb-4674-9bb6-256a106b84a0",
        "answerConceptSetUuid": "b7f6766a-98c8-408d-a9f2-7b52b78c766d" },

      { "id": "knownAllergies", "name": "Known Allergies", "type": "person attribute", "uuid": "a6ce6886-7b96-4be8-bfe5-9f2230362263" },
      { "id": "previousSurgeries", "name": "Previous surgeries and year", "type": "person attribute", "uuid": "7395ad8b-d05e-45fb-88fb-79337e084e32" },

      { "id": "chronicIllnesses", "name": "Chronic illnesses", "type": "person attribute",
        "uuid": "788e904c-64ae-439d-9e62-4671b338b5d8",
        "answerConceptSetUuid": "3df79af0-58a1-4e76-a7a2-cfc04e6e245a" },

      { "id": "chronicOtherDetails", "name": "Details of other", "type": "person attribute", "uuid": "87f6fb62-87cd-42a8-8323-42036ee44d38" },

      { "id": "nokLandline", "name": "Next Of Kin Landline", "type": "person attribute", "uuid": "475219f1-458d-42c9-8c77-70f6957784e9" }
    ],

    "sectionDefinitions": [
      {
        "id": "additionalPatientInfo",
        "name": "Additional Patient Information",
        "fields": ["idPassport", "occupation", "employer", "email", "mobile", "landline"]
      },
      {
        "id": "medicalAidInfo",
        "name": "Medical Aid Information",
        "fields": ["medicalAidProvider", "medicalAidNumber", "membershipType", "principalMemberName", "relationshipToPrincipal"]
      },
      {
        "id": "medicalHistory",
        "name": "Medical History",
        "fields": ["knownAllergies", "previousSurgeries", "chronicIllnesses", "chronicOtherDetails"]
      },
      {
        "id": "nextOfKin",
        "name": "Next of Kin",
        "fields": ["nokName", "nokPhone", "nokLandline"]
      }
    ],

    "sections": [
      "demographics",
      "contact",
      "additionalPatientInfo",
      "medicalAidInfo",
      "medicalHistory",
      "nextOfKin"
    ],

    "fieldConfigurations": {
      "address": {
        "useAddressHierarchy": {
          "useQuickSearch": false
        }
      },
      "gender": [
        { "id": "male", "value": "Male", "label": "Male" },
        { "id": "female", "value": "Female", "label": "Female" },
        { "id": "other", "value": "Other", "label": "Other" }
      ]
    },

    "Translation overrides": {
      "en": {
        "Location.streetAddress": "Street Address",
        "Location.plotNumber": "Plot Number",
        "Location.address3": "Ward (Kgotla)",
        "Location.cityVillage": "City/Town/Village",
        "Location.countyDistrict": "District",
        "Location.country": "Country",
        "Location.postalCode": "Postal Code"
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#831717",
    "Brand color #2": "#831717",
    "Brand color #3": "#1978bd"
   
  }
}

