{
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo-fh.png",
      "alt": "Your Clinic"
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo-fh.png",
      "name": "Your Clinic"
    },
    "extensionSlots": {
      "homepage-dashboard-slot": {
        "remove": [
          "service-queues-dashboard-link"
        ],
        "configure": {
          "patient-lists-dashboard-link": {
            "title": "patientLists"
          }
        }
      }
    },
    "Translation overrides": {
      "en": { "patientLists": "Patient-Lists" },
      "fr": { "patientLists": "Listes de patients" }
    }
  },
  "@openmrs/esm-patient-registration-app": {
    "fieldDefinitions": [
      { "id": "mobile", "name": "Cell Number", "type": "person attribute", "uuid": "424f37d1-7f1e-4914-8af6-0ab92f1b47c8",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },
      { "id": "landline", "name": "Landline", "type": "person attribute", "uuid": "63ba56bb-de22-460b-ab59-312d8f9a6324" },

      { "id": "nokName", "name": "Next Of Kin Full Name", "type": "person attribute", "uuid": "10a61085-9fb9-4ef8-9a3c-67e89fca2937" },
      { "id": "nokPhone", "name": "Next Of Kin Phone Number", "type": "person attribute", "uuid": "55c6a764-9195-458d-b489-3e98e42b18ec",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "medicalAidNumber", "name": "Medical Aid Number", "type": "person attribute", "uuid": "e6f6fb49-7446-4b5d-89a0-3d6470794fd2" },
      { "id": "principalMemberName", "name": "Name of Principal Member", "type": "person attribute", "uuid": "0a46456e-98ff-403d-bac6-62d757c7ac8b" },
      { "id": "relationshipToPrincipal", "name": "Relationship to Principal", "type": "person attribute",
        "uuid": "3b2cb198-ba2a-4d39-b13f-8dbf73770c6b",
        "answerConceptSetUuid": "fc02bd02-eef2-47f9-90f7-ac887f3ec26e" },

      { "id": "idPassport", "required": true, "name": "ID/Passport number", "type": "person attribute", "uuid": "186336c7-50d5-4945-8dd4-4a4468909e2e" },
      { "id": "occupation", "name": "Occupation", "type": "person attribute", "uuid": "3ffe5cae-c9b2-44e7-82e9-47370b352f4b" },
      { "id": "employer", "name": "Employer", "type": "person attribute", "uuid": "409fdb9e-18a5-4cfc-bfce-533a7c3529d9" },
      { "id": "email", "name": "Email address", "type": "person attribute", "uuid": "3840e590-7ba4-11f0-a5e8-12c5aa7d76cc" },

      { "id": "medicalAidProvider", "name": "Medical aid (Provider)", "type": "person attribute", "uuid": "8d26bfef-a2ac-40b8-bf21-3a2c40f6fd67",
      "answerConceptSetUuid": "12d011a5-a46d-4e94-be79-628f51c5ebe7"  },

      { "id": "membershipType", "name": "Membership Type (Principal/Dependent)", "type": "person attribute",
        "uuid": "18a13199-b250-46e0-ac45-ab14e92efa2c",
        "answerConceptSetUuid": "3bc7bb98-d35e-4300-bcdc-f8415c197a6c" },

      { "id": "knownAllergies", "required": true, "name": "Known Allergies", "type": "person attribute", "uuid": "fc301604-200b-4cf0-818f-52ee9e1a2c2b" },
      { "id": "previousSurgeries", "widget": "textarea", "name": "Previous surgeries and year", "type": "person attribute", "uuid": "e8edf051-0a93-43f4-8eea-5762e758c8d5" },

      { "id": "chronicIllnesses", "name": "Chronic illnesses", "type": "person attribute",
        "uuid": "17d23e4f-6d19-44e8-b53e-3a5ef7256bf9",
        "answerConceptSetUuid": "1e171377-392b-4600-a3c3-70c300042158" },

      { "id": "chronicOtherDetails", "widget": "textarea", "name": "Details of other", "type": "person attribute", "uuid": "963cffa5-d709-4708-b12e-8d951b661a6f" },

      { "id": "nokLandline", "name": "Next Of Kin Landline", "type": "person attribute", "uuid": "e72454fb-d832-4007-b76b-6a43c39b310b" }
    ],

    "sectionDefinitions": [
      {
        "id": "additionalPatientInfo",
        "name": "Additional Patient Information",
        "fields": ["idPassport", "occupation", "employer", "email", "mobile", "landline"]
      },
      {
        "id": "medicalAidInfo",
        "name": "Medical Aid Information",
        "fields": ["medicalAidProvider", "medicalAidNumber", "membershipType", "principalMemberName", "relationshipToPrincipal"]
      },
      {
        "id": "medicalHistory",
        "name": "Medical History",
        "fields": ["knownAllergies", "previousSurgeries", "chronicIllnesses", "chronicOtherDetails"]
      },
      {
        "id": "nextOfKin",
        "name": "Next of Kin",
        "fields": ["nokName", "nokPhone", "nokLandline"]
      }
    ],

    "sections": [
      "demographics",
      "contact",
      "additionalPatientInfo",
      "medicalAidInfo",
      "medicalHistory",
      "nextOfKin"
    ],

    "fieldConfigurations": {
      "address": {
        "useAddressHierarchy": {
          "useQuickSearch": false
        }
      },
      "gender": [
        { "id": "male", "value": "Male", "label": "Male" },
        { "id": "female", "value": "Female", "label": "Female" },
        { "id": "other", "value": "Other", "label": "Other" }
      ]
    },

    "Translation overrides": {
      "en": {
        "Location.streetAddress": "Street Address",
        "Location.plotNumber": "Plot Number",
        "Location.address3": "Ward (Kgotla)",
        "Location.cityVillage": "City/Town/Village",
        "Location.countyDistrict": "District",
        "Location.country": "Country",
        "Location.postalCode": "Postal Code"
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#2a79bd",
    "Brand color #2": "#2a79bd",
    "Brand color #3": "#ff7f0e"
  }
}

