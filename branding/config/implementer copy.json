{
  "@openmrs/esm-login-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo.png",
      "alt": "Your Clinic"
    }
  },
  "@openmrs/esm-primary-navigation-app": {
    "logo": {
      "src": "${openmrsSpaBase}/assets/logo.png",
      "name": "Your Clinic"
    },
    "extensionSlots": {
      "homepage-dashboard-slot": {
        "remove": [
          "service-queues-dashboard-link"
        ],
        "configure": {
          "patient-lists-dashboard-link": {
            "title": "patientLists"
          }
        }
      }
    },
    "Translation overrides": {
      "en": { "patientLists": "Patient-Lists" },
      "fr": { "patientLists": "Listes de patients" }
    }
  },
  "@openmrs/esm-patient-registration-app": {
    "fieldDefinitions": [
      { "id": "mobile", "name": "Cell Number", "type": "person attribute", "uuid": "173efd33-23b4-48e2-b740-47b6a2901aa0",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },
      { "id": "landline", "name": "Landline", "type": "person attribute", "uuid": "14d4f066-15f5-102d-96e4-000c29c2a5d7" },

      { "id": "nokName", "name": "Next Of Kin Full Name", "type": "person attribute", "uuid": "ea25ab84-ab53-4caf-9dff-327d8179ff43" },
      { "id": "nokPhone", "name": "Next Of Kin Phone Number", "type": "person attribute", "uuid": "3f898ba5-b57a-4b12-a887-0268167aede6",
        "validation": { "matches": "^[0-9+()\\-\\s]{6,}$" } },

      { "id": "medicalAidNumber", "name": "Medical Aid Number", "type": "person attribute", "uuid": "cd2d0846-2557-409c-a8fa-30f1f1b0f0aa" },
      { "id": "principalMemberName", "name": "Name of Principal Member", "type": "person attribute", "uuid": "f46c1465-2177-4e5d-8a8e-a2a3727ea957" },
      { "id": "relationshipToPrincipal", "name": "Relationship to Principal", "type": "person attribute",
        "uuid": "27264bd9-c8fd-44bd-bb15-57562e688042",
        "answerConceptSetUuid": "9f8a3dbb-d159-4d60-9b20-c06258392fd7" },

      { "id": "idPassport", "name": "ID/Passport number", "type": "person attribute", "uuid": "0db0b355-5447-4646-b967-f7118420ca90" },
      { "id": "occupation", "name": "Occupation", "type": "person attribute", "uuid": "77ae7c96-7728-4f9f-8395-ebdd4315ac85" },
      { "id": "employer", "name": "Employer", "type": "person attribute", "uuid": "e4051971-58c4-43c2-8554-4bb93e351195" },
      { "id": "email", "name": "Email address", "type": "person attribute", "uuid": "6b65b7a7-77a1-11f0-b8ec-6a7c6ed7d9fc" },

      { "id": "medicalAidProvider", "name": "Medical aid (Provider)", "type": "person attribute", "uuid": "d7cf331c-a653-42f5-9a72-8ce5d4ec1c01",
      "answerConceptSetUuid": "d8fecf28-75f2-4f18-bd00-11e742ee5845"  },

      { "id": "membershipType", "name": "Membership Type (Principal/Dependent)", "type": "person attribute",
        "uuid": "73e3cd10-2f66-4362-9bfc-10df516eb2d7",
        "answerConceptSetUuid": "110217e7-0bbd-4200-83ba-8a8ee690d8e2" },

      { "id": "knownAllergies", "name": "Known Allergies", "type": "person attribute", "uuid": "3824c9c8-d231-4970-bba2-b8a23ff81eb8" },
      { "id": "previousSurgeries", "name": "Previous surgeries and year", "type": "person attribute", "uuid": "137bc08c-f509-4442-b112-7284adfdf536" },

      { "id": "chronicIllnesses", "name": "Chronic illnesses", "type": "person attribute",
        "uuid": "713c471e-89cc-4768-a4bf-04f9dea45030",
        "answerConceptSetUuid": "2c716914-dde1-400e-8453-704d206f6539" },

      { "id": "chronicOtherDetails", "name": "Details of other", "type": "person attribute", "uuid": "ac107cd7-b816-4f29-b1e2-c2e7e2f56bdc" },

      { "id": "nokLandline", "name": "Next Of Kin Landline", "type": "person attribute", "uuid": "fc17ae08-4259-4088-8ecf-49b57dea589c" }
    ],

    "sectionDefinitions": [
      {
        "id": "additionalPatientInfo",
        "name": "Additional Patient Information",
        "fields": ["idPassport", "occupation", "employer", "email", "mobile", "landline"]
      },
      {
        "id": "medicalAidInfo",
        "name": "Medical Aid Information",
        "fields": ["medicalAidProvider", "medicalAidNumber", "membershipType", "principalMemberName", "relationshipToPrincipal"]
      },
      {
        "id": "medicalHistory",
        "name": "Medical History",
        "fields": ["knownAllergies", "previousSurgeries", "chronicIllnesses", "chronicOtherDetails"]
      },
      {
        "id": "nextOfKin",
        "name": "Next of Kin",
        "fields": ["nokName", "nokPhone", "nokLandline"]
      }
    ],

    "sections": [
      "demographics",
      "contact",
      "additionalPatientInfo",
      "medicalAidInfo",
      "medicalHistory",
      "nextOfKin"
    ],

    "fieldConfigurations": {
      "address": {
        "useAddressHierarchy": {
          "useQuickSearch": false
        }
      },
      "gender": [
        { "id": "male", "value": "Male", "label": "Male" },
        { "id": "female", "value": "Female", "label": "Female" },
        { "id": "other", "value": "Other", "label": "Other" }
      ]
    },

    "Translation overrides": {
      "en": {
        "Location.streetAddress": "Street Address",
        "Location.plotNumber": "Plot Number",
        "Location.address3": "Ward (Kgotla)",
        "Location.cityVillage": "City/Town/Village",
        "Location.countyDistrict": "District",
        "Location.country": "Country",
        "Location.postalCode": "Postal Code"
      }
    }
  },
  "@openmrs/esm-styleguide": {
    "Brand color #1": "#831717",
    "Brand color #2": "#831717",
    "Brand color #3": "#1978bd"
   
  }
}

